<script>
  // Swatch hover/click to change product image
  document.addEventListener('DOMContentLoaded', function() {
    // Function to switch variant image
    function switchVariantImage(productId, variantValue) {
      const mediaContainer = document.querySelector(`.media[data-product-id="${productId}"]`);
      if (!mediaContainer) return;
      
      const variantImages = mediaContainer.querySelectorAll('.swatch-variant-image');
      let imageFound = false;
      
      variantImages.forEach(img => {
        if (img.dataset.variantImg === variantValue) {
          img.classList.add('active');
          imageFound = true;
        } else {
          img.classList.remove('active');
        }
      });
      
      // If no variant image found, show default (all hidden)
      if (!imageFound) {
        variantImages.forEach(img => img.classList.remove('active'));
      }
    }
    
    // Check if product has swatches and disable hover effect on media if it does
    document.querySelectorAll('.card-wrapper').forEach(cardWrapper => {
      const hasSwatches = cardWrapper.querySelector('.card-swatches') !== null;
      const mediaContainer = cardWrapper.querySelector('.media');
      
      if (hasSwatches && mediaContainer) {
        // Disable the hover effect for second image when swatches exist
        mediaContainer.classList.remove('media--hover-effect');
      }
    });
    
    // Handle swatch interactions
    document.querySelectorAll('.card-swatch-input').forEach(input => {
      const label = input.nextElementSibling;
      const productId = input.dataset.productId;
      const variantValue = input.dataset.variantValue;
      
      // Prevent click from bubbling to parent link
      label.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        if (!input.disabled) {
          input.checked = true;
          switchVariantImage(productId, variantValue);
        }
      });
      
      // Change image on hover
      label.addEventListener('mouseenter', function(e) {
        if (!input.disabled) {
          switchVariantImage(productId, variantValue);
        }
      });
      
      // Revert to default or selected variant on mouse leave
      const cardWrapper = input.closest('.card-wrapper');
      if (cardWrapper) {
        cardWrapper.addEventListener('mouseleave', function() {
          const checkedInput = this.querySelector('.card-swatch-input:checked');
          if (checkedInput) {
            switchVariantImage(productId, checkedInput.dataset.variantValue);
          } else {
            // Hide all variant images to show default
            switchVariantImage(productId, null);
          }
        });
      }
    });
  });
</script>