{% doc %}
  @prompt
    generate a video banner section ... like image banner section but for videos

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    overflow: hidden;
    display: flex;
    align-items: {{ block.settings.content_alignment }};
    justify-content: {{ block.settings.content_position }};
  }

  .ai-video-banner__video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-video-banner__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-video-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    color: #999;
  }

  .ai-video-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-video-banner__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    padding: 40px;
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-video-banner__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-video-banner__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
    line-height: 1.4;
    opacity: 0.9;
  }

  .ai-video-banner__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-family: Helvetica, Arial, sans-serif;
    font-weight: 800;
    transition: background-color 0.3s ease;
    font-size: 1.75rem;
  }

  .ai-video-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-video-banner__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    right: 20px;
    z-index: 4;
    display: flex;
    gap: 10px;
  }

  .ai-video-banner__control-button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-video-banner__control-button-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
  }

  .ai-video-banner__control-button-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    color: #333;
  }

  @media screen and (max-width: 749px) {
    .ai-video-banner-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-video-banner__content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-video-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-video-banner__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<video-banner-{{ ai_gen_id }}
  class="ai-video-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.video %}<video
      class="ai-video-banner__video-{{ ai_gen_id }}"
      {% if block.settings.autoplay %}autoplay{% endif %}
      {% if block.settings.loop %}loop{% endif %}
      {% if block.settings.muted %}muted{% endif %}
      playsinline
      preload="metadata"
    >
      <source src="{{ block.settings.video.sources[1].url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  {% else %}
    <div class="ai-video-banner__placeholder-{{ ai_gen_id }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polygon points="5,3 19,12 5,21"></polygon>
      </svg><div class="ai-video-banner__empty-state-{{ ai_gen_id }}">
        Next, add a video
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-video-banner__overlay-{{ ai_gen_id }}"></div>
  {% endif %}<div class="ai-video-banner__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-video-banner__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-video-banner__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-video-banner__button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>

  {% if block.settings.video and block.settings.show_controls %}
    <div class="ai-video-banner__controls-{{ ai_gen_id }}">
      <button class="ai-video-banner__control-button-{{ ai_gen_id }} ai-video-banner__play-pause-{{ ai_gen_id }}" aria-label="Play/Pause video">
        <svg class="ai-video-banner__play-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polygon points="5,3 19,12 5,21"></polygon>
        </svg><svg class="ai-video-banner__pause-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
          <rect x="6" y="4" width="4" height="16"></rect>
          <rect x="14" y="4" width="4" height="16"></rect>
        </svg>
      </button>

      <button class="ai-video-banner__control-button-{{ ai_gen_id }} ai-video-banner__mute-{{ ai_gen_id }}" aria-label="Mute/Unmute video">
        <svg class="ai-video-banner__volume-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polygon points="11,5 6,9 2,9 2,15 6,15 11,19"></polygon>
          <path d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"></path>
        </svg>
        <svg class="ai-video-banner__mute-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
          <polygon points="11,5 6,9 2,9 2,15 6,15 11,19"></polygon>
          <line x1="23" y1="9" x2="17" y2="15"></line><line x1="17" y1="9" x2="23" y2="15"></line>
        </svg>
      </button>
    </div>
  {% endif %}
</video-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.video = this.querySelector('.ai-video-banner__video-{{ ai_gen_id }}');
        this.playPauseBtn = this.querySelector('.ai-video-banner__play-pause-{{ ai_gen_id }}');
        this.muteBtn = this.querySelector('.ai-video-banner__mute-{{ ai_gen_id }}');
        this.playIcon = this.querySelector('.ai-video-banner__play-icon-{{ ai_gen_id }}');
        this.pauseIcon = this.querySelector('.ai-video-banner__pause-icon-{{ ai_gen_id }}');
        this.volumeIcon = this.querySelector('.ai-video-banner__volume-icon-{{ ai_gen_id }}');
        this.muteIcon = this.querySelector('.ai-video-banner__mute-icon-{{ ai_gen_id }}');
      }

      connectedCallback() {
        if (!this.video) return;

        this.setupEventListeners();
        this.updatePlayPauseIcon();
        this.updateMuteIcon();
      }

      setupEventListeners() {
        if (this.playPauseBtn) {
          this.playPauseBtn.addEventListener('click', () => {
            if (this.video.paused) {
              this.video.play();
            } else {
              this.video.pause();
            }
          });
        }

        if (this.muteBtn) {
          this.muteBtn.addEventListener('click', () => {
            this.video.muted = !this.video.muted;
            this.updateMuteIcon();
          });
        }

        this.video.addEventListener('play', () => {
          this.updatePlayPauseIcon();
        });

        this.video.addEventListener('pause', () => {
          this.updatePlayPauseIcon();
        });

        this.video.addEventListener('volumechange', () => {
          this.updateMuteIcon();
        });
      }

      updatePlayPauseIcon() {
        if (!this.playIcon || !this.pauseIcon) return;

        if (this.video.paused) {
          this.playIcon.style.display = 'block';
          this.pauseIcon.style.display = 'none';
        } else {
          this.playIcon.style.display = 'none';
          this.pauseIcon.style.display = 'block';
        }
      }

      updateMuteIcon() {
        if (!this.volumeIcon || !this.muteIcon) return;

        if (this.video.muted) {
          this.volumeIcon.style.display = 'none';
          this.muteIcon.style.display = 'block';
        } else {
          this.volumeIcon.style.display = 'block';
          this.muteIcon.style.display = 'none';
        }
      }
    }

    customElements.define('video-banner-{{ ai_gen_id }}', VideoBanner{{ ai_gen_id }});
  })();
</script>

